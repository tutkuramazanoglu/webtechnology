@model IEnumerable<Ecommerce.Models.Urunler>
@{
    ViewBag.Title = "SEPETIM";
    //Layout = null;
}
@{float toplam = 0;
    float urunFiyat = 0; }
@{
    foreach (var item in Model)
    {
        urunFiyat += (float)@item.ProductPrice * (float)@item.OrderedQuantity;
        toplam += (float)item.ProductPrice;
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="thumbnail">
                <img src=@item.ProductPicture alt="" style="width:200px;height:150px">
                <div class="caption">
                    <p><h2 class="text-primary"><b>Urun Adı:@item.ProductName</b></h2></p>
                    <p><h2 class="text-success">Urun Kodu:@item.ProductCode</h2></p>
                    <p><h2 class="text-success">Urun Adedi:@item.OrderedQuantity</h2></p>
                    <p><h2 class="text-success">Urun Fiyatı:@urunFiyat @item.Currency</h2></p>
                    <a href="/Sepet/SepetCıkar/@item.UrunID" class="btn btn-warning">Sepetten Çıkar</a>
                </div>
            </div>
            <br />
        </div>
        urunFiyat = 0;
    }
    <p><h2>Toplam Tutar:@toplam</h2></p>
    <input type="button" class="btn btn-success" value="SATIN AL" onclick="location.href='@Url.Action("SatınAl","Sepet")'" />

}

