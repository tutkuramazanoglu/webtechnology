@model IEnumerable<Ecommerce.Models.Urunler>

@{
    ViewBag.Title = "Arama Sonucu";
}

<div class="row">
    @if (Model.Count() == 0)
    {
        <div class="row text-center"><h1>Aranan sonuç bulunamadı.</h1></div>
    }
    @foreach (var i in Model)
    {
        <div class="col-sm-4 col-xs-6 col-md-3 text-center">
            <div class="thumbnail">
                @*<a href="@Url.Action("Detay","DetayGoster"+@Html.DisplayFor(item => i.UrunID))"><img src=@Html.DisplayFor(item => i.ProductPicture) class="img-responsive" alt="..." style="width:350px;height:400px;"></a>*@
                <a href="/Detay/DetayGoster/@i.UrunID">
                    <img src=@i.ProductPicture alt="" style="width:200px;height:150px"></a>
                    <div class="caption">
                        <h3>@Html.DisplayFor(item => i.ProductName)</h3>
                        <b>@Html.DisplayFor(item => i.ProductCode)</b>
                        <p><span class="label label-success">@Html.DisplayFor(item => i.ProductPrice) TL</span></p>
                    </div>
</div>
        </div>
    }
</div>