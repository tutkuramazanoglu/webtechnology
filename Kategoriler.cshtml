@model IEnumerable<Ecommerce.Models.Urunler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

@{
    foreach (var item in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="thumbnail">
                <a href="Detay/DetayGoster/@item.UrunID">
                    <img src=@item.ProductPicture alt="" style="width:200px;height:150px">
                    <div class="caption">
                        <h4 class="pull-right">@item.ProductName </h4><br />
                        <h4 class="pull-right">@item.ProductPrice @item.Currency</h4>
                    </div>
                </a>
            </div>
        </div>
    }
}

